    private void btnGiaiActionPerformed(java.awt.event.ActionEvent evt) {                                        
        PhuongTrinh x;
        double a,b,c;
        a = Double.parseDouble(txtHeSoA.getText());
        b = Double.parseDouble(txtHeSoB.getText());
        if(rbBac1.isSelected()){
        x = new Bac1(a,b);
        }else {
        c = Double.parseDouble(txtHeSoC.getText());
        x =new Bac2(a,b,c);
        }
        lblKetQua.setText(x.toString());
        btnGiai.setEnabled(false);
        btnLamLai.setEnabled(true);
    }                                       

    private void btnLamLaiActionPerformed(java.awt.event.ActionEvent evt) {                                          
         txtHeSoA.setText("");
         txtHeSoB.setText("");
         txtHeSoC.setText("");
         lblKetQua.setText("");
         txtHeSoA.requestFocus();
         btnLamLai.setEnabled(false);
    }                                         

    private void txtHeSoAKeyPressed(java.awt.event.KeyEvent evt) {                                    
        if(isOK())btnGiai.setEnabled(true);
    }                                   

    private void txtHeSoBKeyPressed(java.awt.event.KeyEvent evt) {                                    
        if(isOK())btnGiai.setEnabled(true);
    }                                   

    private void txtHeSoCKeyPressed(java.awt.event.KeyEvent evt) {                                    
       if(isOK())btnGiai.setEnabled(true);
    }                                   

    private void txtHeSoAKeyReleased(java.awt.event.KeyEvent evt) {                                     
        // TODO add your handling code here:
        if(isOK())btnGiai.setEnabled(true);
    }                                    

    private void txtHeSoBKeyReleased(java.awt.event.KeyEvent evt) {                                     
        // TODO add your handling code here:
        if(isOK())btnGiai.setEnabled(true);
    }                                    

    private void txtHeSoCKeyReleased(java.awt.event.KeyEvent evt) {                                     
        // TODO add your handling code here:
        if(isOK())btnGiai.setEnabled(true);
    }                                    

    private void rbBac1ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        if(rbBac1.isSelected()){
            lblC.setVisible(false);
            txtHeSoC.setVisible(false);
        }
    }                                      

    private void rbBac2ActionPerformed(java.awt.event.ActionEvent evt) {                                       
        // TODO add your handling code here:
        if(rbBac2.isSelected()){
            lblC.setVisible(true);
            txtHeSoC.setVisible(true);
        }
    }                                      

    private void btnThemActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        PhuongTrinh x;
        double a,b,c;
        a = Double.parseDouble(txtHeSoA.getText());
        b = Double.parseDouble(txtHeSoB.getText());
        if(rbBac1.isSelected()){
             x = new Bac1(a,b);
             dtm.addRow(new Object[]{txtHeSoA.getText(),txtHeSoB.getText(),"",x.giai()});
        }else {
             c = Double.parseDouble(txtHeSoC.getText());
             x =new Bac2(a,b,c);
             dtm.addRow(new Object[]{txtHeSoA.getText(),txtHeSoB.getText(),txtHeSoC.getText(),x.giai()});
        }
    }                                       
                                  

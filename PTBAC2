    public boolean isOK(){
        if(txtHeSoA.getText().equals(""))return false;
        if(txtHeSoB.getText().equals(""))return false;
        if(rbBac2.isSelected()){
        if(txtHeSoC.getText().equals(""))return false;}
        return true ;
    }

